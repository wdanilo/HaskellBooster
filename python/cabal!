import os.path
import sys
import os
import subprocess

def main():
    SCRIPTPATH= os.path.dirname(os.path.dirname(os.path.realpath(sys.argv[0])))
    pathBat = os.path.join(SCRIPTPATH, "preprocessor", "run.bat")
        
    callInfo = ('cabal --ghc-options="-F -pgmF%s"' % pathBat) + " " + ' '.join(sys.argv[1:])    
    
    os.system(callInfo)
    
    #subprocess.call(callInfo)

main()

#cabal --ghc-options="-F -pgmF$SCRIPTPATH/preprocessor/preprocessor.py" $@